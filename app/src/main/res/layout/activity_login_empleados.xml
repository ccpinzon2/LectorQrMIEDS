<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/fondo"
    tools:context="com.example.cristhianpinzon.lectorqr.LoginEmpleadosActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtNombreEdsLoginEmps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textSize="20sp"
            android:paddingBottom="2dp"/>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/frescoImgEds"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="1.3"
            fresco:placeholderImage="@drawable/ic_qrscan"/>


        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtMarcaEdsLoginEmps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textSize="20sp"
            android:paddingBottom="2dp"/>




        <ImageView
            android:id="@+id/imgGremioLoginEmps"
            android:src="@drawable/fedispetrollogo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.58" />

        <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Funcionario"
        android:textSize="23sp"
        android:paddingBottom="40dp"/>


        <Spinner
            android:id="@+id/spinnerLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/input_password_empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:hint="ContraseÃ±a"/>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_IniciarEmpleado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape"
                android:padding="12dp"
                android:text="Iniciar"
                android:textColor="@color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_CerrarSesionEds"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape"
            android:padding="12dp"
            android:text="Cerrar Sesion"
            android:textColor="@color/white" />



    </LinearLayout>



</ScrollView>
