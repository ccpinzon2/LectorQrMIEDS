<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristhianpinzon.lectorqr.PuntajeActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtNombreUsuarioApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCPINZON USUARIO"
            android:textSize="25sp"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtEmailUserApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCPINZON@gmail.com"
            android:textSize="25sp"
            android:paddingBottom="20dp"/>


        <ImageView android:src="@drawable/ic_user"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.58" />

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="ID Usuario"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo Vehiculo"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Puntos Globales"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Puntos fidelizaciÃ³n"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtIdUserApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="I4354356"/>
                <TextView
                    android:id="@+id/txtTipoVehiculo"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4356456"/>
                <TextView
                    android:id="@+id/txtTelefonoUserApp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4356456"/>
                <TextView
                    android:id="@+id/txtPtsGlobales"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="435"/>

                <TextView
                    android:id="@+id/txtPtsFidelizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_RedAcmPtos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:text="Redimir / Acumular  Puntos"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_SalirPts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Salir"/>


    </LinearLayout>
</ScrollView>
